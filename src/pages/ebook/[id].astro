---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header';
import Footer from '../../components/Footer';
import ebooksData from '../../data/ebooks.json';
import type { Ebook } from '../../types/ebook';

export function getStaticPaths() {
  const ebooks = ebooksData.ebooks as Ebook[];
  return ebooks.map((ebook) => ({
    params: { id: ebook.id },
    props: { ebook }
  }));
}

const { ebook } = Astro.props;
const allEbooks = ebooksData.ebooks as Ebook[];

// Find related ebooks (same category or shared tags)
const relatedEbooks = allEbooks
  .filter((e) => {
    if (e.id === ebook.id) return false;
    if (ebook.category && e.category === ebook.category) return true;
    const sharedTags = e.tags.filter((tag) => ebook.tags.includes(tag));
    return sharedTags.length >= 2;
  })
  .slice(0, 3);
---

<Layout title={`${ebook.title} - Ebooks Portfolio`}>
  <Header title="Ebooks" />
  
  <main class="container">
    <div class="ebook-detail">
      <a href="/" class="back-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12" />
          <polyline points="12 19 5 12 12 5" />
        </svg>
        <span data-i18n="detail.backToPortfolio">Volver al portafolio</span>
      </a>
      
      <div class="ebook-detail-header">
        <h1 class="ebook-detail-title">{ebook.title}</h1>
        <div class="ebook-detail-meta">
          {ebook.language && (
            <span>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z" />
                <polyline points="14 2 14 8 20 8" />
              </svg>
              {ebook.language}
            </span>
          )}
          <span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
              <line x1="16" y1="2" x2="16" y2="6" />
              <line x1="8" y1="2" x2="8" y2="6" />
              <line x1="3" y1="10" x2="21" y2="10" />
            </svg>
            {ebook.year}
          </span>
          {ebook.stars !== undefined && ebook.stars > 0 && (
            <span class="detail-stars">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
              </svg>
              {ebook.stars}
            </span>
          )}
          {ebook.hasPages && (
            <span class="badge">
              <span data-i18n="detail.publishedOn">Publicado en GitHub Pages</span>
            </span>
          )}
        </div>
      </div>
      
      <p class="ebook-detail-description">{ebook.description}</p>
      
      <div class="ebook-detail-tags">
        {ebook.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
      
      <div class="ebook-detail-actions">
        {ebook.hasPages && ebook.pagesUrl && (
          <a
            href={ebook.pagesUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
            <span data-i18n="detail.viewOnline">Ver Ebook Online</span>
          </a>
        )}
        <a
          href={ebook.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-github"
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
          <span data-i18n="detail.viewCode">Ver CÃ³digo en GitHub</span>
        </a>
      </div>

      {relatedEbooks.length > 0 && (
        <div class="related-ebooks">
          <h2 data-i18n="detail.relatedEbooks">Ebooks relacionados</h2>
          <div class="related-grid">
            {relatedEbooks.map((related) => (
              <a href={`/ebook/${related.id}`} class="related-card">
                <h3>{related.title}</h3>
                <p>{related.description}</p>
                <div class="related-tags">
                  {related.tags.slice(0, 3).map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  .detail-stars {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: #ffc107;
    font-weight: 500;
  }

  .related-ebooks {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .related-ebooks h2 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .related-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: 1.25rem;
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .related-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .related-card h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .related-card p {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0;
  }

  .related-tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
